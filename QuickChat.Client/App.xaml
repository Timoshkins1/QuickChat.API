<Application x:Class="QuickChat.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:QuickChat.Client.Converters"
             StartupUri="Views/LoginWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="DarkBrush" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="LightBrush" Color="#FF252526"/>
        <SolidColorBrush x:Key="TextBrush" Color="White"/>

        <!-- Конвертеры -->
        <converters:MessageAlignConverter x:Key="MessageAlignConverter"/>
        <converters:MessageColorConverter x:Key="MessageColorConverter"/>
    </Application.Resources>

</Application>
