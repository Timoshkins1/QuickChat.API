<Application x:Class="QuickChat.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <!-- Основные цвета -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="DarkBackground" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="LightBackground" Color="#FF252526"/>
        <SolidColorBrush x:Key="TextColor" Color="White"/>

        <!-- Стандартный стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Стандартный стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Application.Resources>
</Application>