<Application x:Class="QuickChat.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:QuickChat.Client.Converters"
             StartupUri="Views/LoginWindow.xaml">
    <Application.Resources>
        <!-- 🎨 Цвета -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="DarkBrush" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="LightBrush" Color="#FF252526"/>
        <SolidColorBrush x:Key="TextBrush" Color="White"/>

        <!-- 🔄 Конвертеры -->
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:BoolToAlignConverter x:Key="BoolToAlignConverter"/>
    </Application.Resources>
</Application>
