<Window x:Class="QuickChat.Client.Views.RegisterChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создать чат" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Имя чата"/>
            <TextBox x:Name="ChatNameBox" Margin="0,5"/>

            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

            <Button Content="Создать" Margin="0,10,0,0" Click="CreateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
