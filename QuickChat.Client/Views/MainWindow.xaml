<Window x:Class="QuickChat.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QuickChat.Client.Converters"
        Title="QuickChat"
        Width="950" Height="600"
        MinWidth="800" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF8C00"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#2C2C2C"/>
        <SolidColorBrush x:Key="TextBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="MessageBrush" Color="#333333"/>
        <SolidColorBrush x:Key="MessageMineBrush" Color="#FF8C00"/>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2E2E2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Стиль для списка чатов -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковая панель -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" Padding="10">
            <StackPanel>
                <Button Content="Новый чат" Click="NewChat_Click"/>
                <TextBlock Text="Ваши чаты" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource AccentBrush}" 
                           Margin="5,20,5,10"/>

                <!-- Список чатов с цветными кружками -->
                <ListBox x:Name="ChatsList" 
         Background="Transparent"
         Foreground="White"
         BorderThickness="0"
         SelectionChanged="ChatsList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5,3">
                                <Border Width="16" 
                        Height="16"
                        CornerRadius="8"
                        Background="{Binding UserColor}"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"/>
                                <!-- Используем DisplayName вместо OtherUser -->
                                <TextBlock Text="{Binding OtherUser}" 
                           VerticalAlignment="Center"
                           FontSize="14"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Область чата -->
        <Grid Grid.Column="1" Background="{StaticResource BackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Список сообщений -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                <ItemsControl x:Name="MessagesList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Аватарка (только для входящих сообщений) -->
                                <Border Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="{Binding SenderColor}"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    Visibility="{Binding IsMine, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=inverse}"/>
                                                            <!-- Контейнер сообщения -->
                                <Grid Grid.Column="1"
                  HorizontalAlignment="{Binding IsMine, Converter={StaticResource MessageAlignmentConverter}}">

                                    <!-- Сообщение -->
                                    <Border Background="{Binding IsMine, Converter={StaticResource MessageColorConverter}}"
                        CornerRadius="8"
                        Padding="10"
                        MaxWidth="400">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Sender}"
                                   Foreground="#AAAAAA"
                                   FontWeight="Bold"
                                   FontSize="11"
                                   Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding Text}"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Поле ввода -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
                <TextBox x:Name="MessageInputBox" 
                         Width="600" 
                         Margin="0,0,10,0" 
                         Height="35" />
                <Button Content="Отправить" 
                        Width="100" 
                        Click="SendButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>