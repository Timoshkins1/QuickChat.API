<Window x:Class="QuickChat.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuickChat"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource LightBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель -->
        <StackPanel Grid.Column="0" Background="{StaticResource DarkBrush}">
            <Button Content="Создать чат" Margin="5" Click="CreateChat_Click"/>

            <Button Content="Подключиться к чату" Margin="5" Click="JoinChat_Click"/>

            <TextBlock Text="Ваши чаты" FontWeight="Bold" Margin="5"/>
            <ListBox x:Name="ChatsList" DisplayMemberPath="Name" SelectionChanged="ChatsList_SelectionChanged" Margin="5"/>
        </StackPanel>

        <!-- Правая панель -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox x:Name="MessagesList" Background="Transparent" BorderThickness="0" Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel HorizontalAlignment="{Binding IsMine, Converter={StaticResource MessageAlignConverter}}">
                            <TextBlock Text="{Binding Sender}" FontWeight="Bold" Foreground="LightGray" Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding Text}" Background="{Binding IsMine, Converter={StaticResource MessageColorConverter}}" Padding="10" Margin="0,0,0,10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
                <TextBox x:Name="MessageBox" Width="500" Margin="0,0,10,0"/>
                <Button Content="Отправить" Click="SendButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
